{
  "emulators": {
    "ui": {
      "enabled": true,     
      "port": 4000          
    },
    "hosting": {
      "port": 9000
    }
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
